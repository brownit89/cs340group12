<html>
{{#each foo}}
{{this}}
{{/each}}
<h3>Add new card:</h3>
<form id="addcard" action="/card" method="post">
	Name: <input type="text" name="card_name"><br>
	Rarity: <input type="text" name="rarity"><br>
	Description: <input type="text" name="description"><br>
	Mana Cost: <input type="number" name="mana_cost"><br>
	Card Type: <input type="text" name="card_type"><br>
	<input type="submit" value="Submit">
</form>
<br/>

<h3>Current Cards:</h3>
<table>
	<thead>
		<th>Name:</th>
		<th>Rarity</th>
		<th>Description</th>
		<th>Mana Cost</th>
		<th>Card Type</th>
	</thead>
	<tbody>
		{{#each card}}
		<tr>
			<td>{{card_name}}</td>
			<td>{{rarity}}</td>
			<td>{{description}}</td>
			<td>{{mana_cost}}</td>
			<td>{{card_type}}</td>
			<td><a href="/card/{{card_id}}">Update</a></td>
		</tr>
		{{/each}}
	</tbody>
</table>
</html>
